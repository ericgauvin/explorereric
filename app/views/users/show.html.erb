<div class="main_content">

<p id="notice"><%= notice %></p>

<p>
<%= gravatar_for @user %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if logged_in? %>
  <% if current_user.role == 'admin' %>
<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>
<% end %>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

</div>